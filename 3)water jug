def pour(jug1, jug2):
    max1, max2, fill = 4, 3, 2
    print("%d\t%d" % (jug1, jug2))

    if jug2 == fill:
        return
    elif jug1 == 0:
        pour(max1, jug2)  # Fill jug1
    elif jug2 == max2:
        pour(jug1, 0)  # Empty jug2
    else:
        amount_to_pour = min(jug1, max2 - jug2)
        pour(jug1 - amount_to_pour, jug2 + amount_to_pour)

print("JUG1\tJUG2")
pour(0, 0)


